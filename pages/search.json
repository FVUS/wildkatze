---
layout: null
permalink: /search.json
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ post.external_url | default: post.url | relative_url }}",
      "date"     : "{{ post.date }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
[
  {% for instpost in site.instposts %}
    {
      "title"    : "{{ instpost.title | escape }}",
      "category" : "{{ instpost.category }}",
      "tags"     : "{{ instpost.tags | join: ', ' }}",
      "url"      : "{{ instpost.external_url | default: post.url | relative_url }}",
      "date"     : "{{ instpost.date }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
